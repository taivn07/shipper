<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/profile_edit_screen_relative_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcf7f2">

        <ImageView
            android:id="@+id/profile_edit_screen_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/image_user" />

        <TextView
            android:id="@+id/profile_edit_screen_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/profile_edit_screen_image"
            android:text="@string/profile_edit_screen_name"
            android:textSize="@dimen/profile_edit_screen_text_size_name" />

        <TextView
            android:id="@+id/profile_edit_screen_address_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_edit_screen_name_user"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/profile_edit_screen_image"
            android:text="@string/profile_edit_screen_address"
            android:textSize="@dimen/profile_edit_screen_text_size_address" />

        <TextView
            android:id="@+id/profile_edit_screen_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_edit_screen_address_user"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/profile_edit_screen_image"
            android:text="@string/profile_edit_screen_phone_number"
            android:textSize="@dimen/profile_edit_screen_text_size_phone_number" />

        <ImageView
            android:id="@+id/profile_edit_screen_thay_anh_dai_dien"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/profile_edit_screen_image"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/profile_edit_text_view_thay_anh_dai_dien"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/profile_edit_screen_image"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/profile_edit_screen_thay_anh_dai_dien"
            android:gravity="center_vertical"
            android:text="Thay ảnh đại diện" />

        <ImageView
            android:id="@+id/profile_edit_screen_No.like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/profile_edit_screen_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_edit_text_view_thay_anh_dai_dien"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/profile_edit_screen_textview_No.Like"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/profile_edit_screen_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_edit_screen_No.like"
            android:gravity="center_vertical"
            android:text="200" />

        <ImageView
            android:id="@+id/profile_edit_screen_No.Unlike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/profile_edit_screen_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_edit_screen_textview_No.Like"
            android:src="@drawable/ic_dislike" />

        <TextView
            android:id="@+id/profile_edit_screen_textview_No.UnLike"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/profile_edit_screen_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_edit_screen_No.Unlike"
            android:gravity="center_vertical"
            android:text="200" />
    </RelativeLayout>

    <View
        android:id="@+id/profile_edit_screen_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/profile_edit_screen_relative_layout_info"
        android:background="#f4e3cf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Tên Hiển Thị" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f4e3cf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Ngày Sinh" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f4e3cf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Số CMT" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f4e3cf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Facebook ID" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/profile_color_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Điện Thoại" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/profile_color_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Địa Chỉ" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/profile_color_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/profile_edit_screen_spinner_quan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Spinner>

            <Spinner
                android:id="@+id/profile_edit_screen_spinner_thanhpho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Spinner>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/profile_color_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="Mã Giới Thiệu" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:inputType="number" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:textSize="17sp"
                android:id="@+id/tv_khonghople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:padding="7dp"
                android:text="Mã Không Hợp Lệ" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_khonghople"
                android:background="#d4d4d4" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#dd7806"
                android:text="Cập Nhật" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:background="#f4e3cf" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>