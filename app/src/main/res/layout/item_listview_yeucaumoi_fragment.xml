<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/edge_listview_cholayhang">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="2.5"
            android:background="@drawable/ic_shop"
            android:gravity="center"
            android:text="date"
            android:textSize="16dip"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@color/orange">

            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
                android:layout_weight="1">
            <TextView
                android:id="@+id/informationshipper"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:textColor="@color/blue"
                android:background="@color/register_screen_background_textview"
                android:text="cần người giao quần áo đi Xuân Thủy"/>

            <TextView
                android:id="@+id/numbership"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@id/informationshipper"
                android:background="@color/register_screen_background_textview"
                android:text="Có 10 shipper đã nhận được tin này"
                android:textColor="@color/red"
                android:gravity="bottom"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/khoangcach"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:textColor="@color/color_white"
                    android:background="@color/register_screen_background_textview"
                    android:text="cách bạn 1km"
                    android:textSize="16sp"
                    android:gravity="top|center"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/khoangcach"
                    android:background="@color/register_screen_background_textview"
                    android:text="11/12/2015"
                    android:textColor="@color/wallet_bright_foreground_holo_light"
                    android:gravity="top|center"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@color/color_white">
        <Button
            android:id="@+id/btnnhanship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_nhanship"
            android:text="Nhận Ship"
            android:visibility="visible"
            android:textColor="@color/wallet_primary_text_holo_light"/>
        <Button
            android:id="@+id/btnchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_chat"
            android:text="Chat"
            android:textColor="@color/wallet_primary_text_holo_light"/>
        <Button
            android:id="@+id/btncall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_call"
            android:text="Gọi"
            android:textColor="@color/wallet_primary_text_holo_light"/>
        <Button
            android:id="@+id/btndanhdau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_danhdau"
            android:text="Đánh dấu"
            android:visibility="visible"
            android:textColor="@color/wallet_primary_text_holo_light"/>

        <Button
            android:id="@+id/btnan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_an"
            android:text="Ẩn"
            android:textColor="@color/wallet_primary_text_holo_light"/>

        <Button
            android:id="@+id/huydon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:drawableTop="@drawable/ic_huydon"
            android:text="Hủy Đơn"
            android:visibility="invisible"
            android:textColor="@color/wallet_primary_text_holo_light"/>
    </LinearLayout>
</LinearLayout>
