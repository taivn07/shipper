<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FB8C00" />
            <gradient android:angle="-90" android:endColor="#FB8C00" android:startColor="#FB8C00" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3F51B5" />
            <solid android:color="#1E88E5" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fd6721" />
            <gradient android:angle="-90" android:endColor="#fd6700" android:startColor="#fd6700" />
        </shape>
    </item>
</selector>